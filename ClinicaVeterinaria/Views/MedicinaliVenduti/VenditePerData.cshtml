@{
    ViewBag.Title = "VenditePerData";
}

<h2>VenditePerData</h2>

<label>Inserisci la data per il quale vuoi controllare le vendite:</label>
<input id="searchdate" type="date" />
<input type="button" id="searchbtn" value="Cerca" />

<div id="resultsTable" style="display:none;">
    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Ditta Fornitrice</th>
                <th>Uso Possibile</th>
            </tr>
        </thead>
        <tbody id="results"></tbody>
    </table>
</div>



@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#searchbtn').click(function () {
                var resultsBody = $('#results');
                resultsBody.html(""); 
                $.ajax({
                    url: '/MedicinaliVenduti/Sellfordata',
                    type: 'GET',
                    data: { searchdata: $('#searchdate').val() },
                    success: function (data) {
                        console.log(data);
                        if (data.length > 0) {
                            $.each(data, function (index, value) {
                                var row = "<tr>" +
                                    "<td>" + value.Nome + "</td>" +
                                    "<td>" + (value.DittaFornitrice || "Non disponibile") + "</td>" +
                                    "<td>" + (value.UsoPossibile || "Non disponibile") + "</td>" +
                                    "</tr>";
                                resultsBody.append(row);
                            });
                            $('#resultsTable').show();
                        } else {
                            $('#resultsTable').hide();
                        }
                    },
                });
            });
        });
    </script>
   
}