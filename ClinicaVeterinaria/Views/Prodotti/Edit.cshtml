@model ClinicaVeterinaria.Models.Prodotti

@{
    ViewBag.Title = "Modifica Prodotto";
}

<h2>Modifica Prodotto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome)
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DittaFornitrice, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DittaFornitrice)
                @Html.ValidationMessageFor(model => model.DittaFornitrice)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UsoPossibile, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UsoPossibile)
                @Html.ValidationMessageFor(model => model.UsoPossibile)
            </div>
            
            <div class="form-group">
                @Html.Label("Codice Armadietto", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("CodiceArmadietto", (int?)ViewBag.CodiceArmadietto, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Codice Cassetto", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("CodiceCassetto", (int?)ViewBag.CodiceCassetto, new { @class = "form-control" })
                </div>
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salva" class="btn btn-custom" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Indietro all'elenco", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


