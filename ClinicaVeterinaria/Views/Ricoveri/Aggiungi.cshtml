@model ClinicaVeterinaria.Models.Ricoveri
<link href="~/Assets/css/Ricoveri.css" rel="stylesheet" />
@{
    ViewBag.Title = "Aggiungi Ricovero";
}

<style>
    h2,label {
        color: rgb(4, 116, 124);
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h2 class="card-title text-center">Aggiungi Ricovero</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Aggiungi", "Ricoveri", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.IDAnimale, "Animale", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("IDAnimale", ViewBag.AnimaliList as SelectList, "-- Seleziona un animale --", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IDAnimale, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.DataInizioRicovero, "Data Inizio Ricovero", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.DataInizioRicovero, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.DataInizioRicovero, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Foto, "Foto", htmlAttributes: new { @class = "control-label" })
                            <input type="file" name="Foto" id="Foto" class="form-control" />
                            @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-4">
                            <input type="submit" value="Aggiungi" class="btn btn-custom" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
