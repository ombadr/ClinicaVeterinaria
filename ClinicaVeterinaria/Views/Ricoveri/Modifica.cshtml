@model ClinicaVeterinaria.Models.Ricoveri

@{
    ViewBag.Title = "Modifica Ricovero";
}

<style>
    h2,h4, label {
        color: rgb(4, 116, 124);
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Modifica Ricovero</h2>

                    @using (Html.BeginForm("Modifica", "Ricoveri", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Ricovero</h4>
                            <hr />
                            @Html.HiddenFor(model => model.ID)

                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.IDAnimale, "Animale", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IDAnimale", ViewBag.AnimaliList as SelectList, "-- Seleziona un animale --", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IDAnimale, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.DataInizioRicovero, "Data Inizio Ricovero", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.DataInizioRicovero, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DataInizioRicovero, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                @Html.LabelFor(model => model.Foto, "Foto", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input type="file" name="Foto" id="Foto" class="form-control" />
                                    @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Salva" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
