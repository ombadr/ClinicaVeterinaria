@model ClinicaVeterinaria.Models.Utenti
@{
    ViewBag.Title = "Login";
}

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        height: 100vh;
        padding-top: 50px;
        padding-bottom: 50px;
    }

    .login-form {
        width: 400px;
        padding: 30px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0px 0px 15px 0px rgba(0, 0, 0, 0.1);
    }

        .login-form h2 {
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .checkbox {
        margin-bottom: 20px;
    }

    .btn-login {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: rgb(4, 116, 124);
        color: white;
        font-weight: bold;
        cursor: pointer;
    }

        .btn-login:hover {
            background-color: #39F0FF;
            color: black;
        }
</style>

<div class="login-container">
    <div class="login-form">
        <h2>Login</h2>

        @using (Html.BeginForm(new { @class = "login-form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Inserisci il tuo indirizzo email" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.PasswordHash, "Password", new { @class = "form-label" })
                @Html.PasswordFor(m => m.PasswordHash, new { @class = "form-control", placeholder = "Inserisci la tua password" })
            </div>

            <div class="form-group checkbox">
                <input class="form-check-input" type="checkbox" id="keepLogged" name="keepLogged">
                <label class="form-check-labelc fw-bold ms-1" for="keepLogged">
                    Mantienimi connesso
                </label>
            </div>

            <button type="submit" class="btn-login">Login</button>
        }
    </div>
</div>
